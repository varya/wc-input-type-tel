{
  "compilerOptions": {
    "module": "esnext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitOverride": false, //Lit requires overrides
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "es2020",
    "useDefineForClassFields": false, //required by Lit: https://lit.dev/docs/components/properties/#avoiding-issues-with-class-fields
    "useUnknownInCatchVariables": false,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-missing-import": "off",
          "no-unclosed-tag": "error",
          "no-incompatible-type-binding": "off",
          "no-incompatible-property-type": "warning"
        }
      }
    ]
  },
  "include": ["**/*.ts"],
  "exclude": ["vite.config.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "lib": ["es2016", "dom"]
    }
  }
}
